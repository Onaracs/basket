$(document).ready(function() {
  //Creating a new basket
  //======================================
  $('#new_folder').on('click', function(e) {
    e.preventDefault();
    $('#new-basket-form-container').slideDown("medium", function() {

    })
  });

  $('#new_basket_form').on('submit', function(e) {
    e.preventDefault();

    var user_input = $('#folder_name').val()
    _this = this

    $.ajax({
      type: 'POST',
      url: '/folders',
      data: {folder_name: user_input},
      dataType: "JSON",
    }).done(function(response) {
      console.log(response);
      $('#user_folders').append('<li class="basket-list-item">' + 
                                  response.name + 
                                  '</li>');
      $(_this).hide();
    });
  });

  $('#hide_button').on('click', function(){
    $('#new-basket-form-container').slideUp("medium", function() {});     
  })

  //Deleting a basket
  //======================================
  $('.basket-trash').on('click', function(){
    linkId = $(this).attr("data");
    console.log(linkId); 
  });

  //Deleting a link
  //======================================
  $('.link-delete').on('click', '.fa-trash', function(event){
    event.preventDefault();

    linkId = $(this).attr("data");
    console.log(linkId);  
  });
});
