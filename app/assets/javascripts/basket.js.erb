  $('#new_folder').on('click', function(e) {
    e.preventDefault();

    $('#new_basket_form_container').removeClass('hidden');

    $('#new_basket_form').on('submit', function(e) {
      e.preventDefault();

      user_input = $('form').serialize();
      console.log(user_input)

      $.ajax({
           type: 'POST',
           url: '/folders',
           data: {folder_name: user_input},
        }).done(function(response) {
          alert("Folder saved " + response);
        });
    })
  })

