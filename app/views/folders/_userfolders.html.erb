<% if current_user.folders != nil %>
  <ul>
  <% current_user.folders.each do |folder| %>
    <li>
      <%= link_to folder.name, folder_path(folder), class: "show_basket" %>

      <a href="#",
         class="delete_basket",
          value= "<%= folder.id %>">-</a>
    </li>
  <% end %>
  </ul>
<% end %>
